<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/item_process_iv_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_process_iv_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_process_tv_name"
            style="@style/NormalTextStyle"
            android:text="应用名称"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_process_tv_memory"
            style="@style/NormalTextStyle"
            android:text="占用的内存大小"
            android:textSize="15sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/item_process_cb_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bkg" >

        <!-- Logo -->

        <ImageView
            android:id="@+id/home_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/gold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@id/home_iv_logo"
            android:orientation="vertical" >

            <!-- title -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄金卫士"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.itgold.mobilesafe.view.FocusedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="黄金卫士，时刻保护您的手机安全，让您的手机更快，更安心"
                android:textColor="#ff0000"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:background="@drawable/setting_selector"
            android:onClick="clickSetting"
            android:scaleType="center"
            android:src="@drawable/setting" />
    </RelativeLayout>

    <GridView
        android:id="@+id/home_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="3dp"
        android:numColumns="2"
        android:verticalSpacing="3dp" >
    </GridView>

</LinearLayout>